@import url(http://fonts.googleapis.com/earlyaccess/notosanskr.css)
body
	font-family 'Noto Sans KR', sans-serif
	padding 0
	margin 0
nav
	//width 100%
	height 550px
	//background url('../image/bg2.jpg') no-repeat center center fixed
	//background-attachmen scroll
	//background-size cover
	//color #FFF
	color #e53935
	background-attachment scroll
	background-image linear-gradient(to bottom, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1)), url('../image/realbg.jpg')
	background-position center center
	background-repeat none
	-webkit-background-size cover
	-moz-background-size cover
	background-size cover
	-o-background-size cover
	#headerBar
		padding .75rem 2rem
		span
			font-size 1.8em
			font-weight 900
			a
				text-decoration none
				color #e53935
		.reverse
			float right
			span
				margin 0 .25rem
	.introText
		width 80%
		padding 3em 0
		margin auto
		p
			font-size 4em
			font-weight 700
			text-align center
			color #FFF
section
	width 100%
	height 550px
	h2
		font-size 1.3em
		font-weight 700
		color #FFF
		margin 0
	.titled	
		//width 150px
		width 350px
		.highlight
			float left
			width 100%
			border-color #f44336
	.content
		width 80%
		margin 0 auto
		h1.title
			text-align center
			font-size 2.5rem
			font-weight 900
			margin 0
			padding .8em 0 1.25em 0
section.gray
	background-color #EEEEEE
#gameBanner
		.name
			position absolute
			width 100%
			height 350px
			background-color rgba(0,0,0,0.4)
			.caption
				position absolute
				width 100%
				top 33%
				text-align center
				h2
					font-size 30px
					font-weight 900
					color #FFF
					margin .2em
				.colord
					margin 0 auto
					max-width 80px
					border-color #f44336
				p
					color #FFF
				p:nth-of-type(1)
					font-size 14px
					font-weight 700
					line-height 0
				p:nth-of-type(2)
					font-size 18px
					font-weight 600
				line-height 1
#gameRecommendation
	background-attachment scroll
	background-image linear-gradient(to bottom, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('../image/bgs.jpg')
	background-position center center
	background-repeat none
	-webkit-background-size cover
	-moz-background-size cover
	background-size cover
	-o-background-size cover
	color #FFF
	height auto
	.centerd
		padding .5em 8em 3em 8em
		.menu
			margin 0 1.5rem
			display inline-block
			.content
				clear both
				width 350px
				//padding .15em 1rem
				margin 0
				font-size 1em
				font-weight 500
				p
					margin 0
					line-height 2.5
					text-align right
#gameBtn
	.content
		width 80%
		h2
			color #000
			font-size 1.5em
			text-align center
		button
			width 80%
			height 8rem
			margin 5rem auto
			font-size 3.5rem
			font-weight 900
			background-color #ef5350
			color #FFF
			border 0
			border-radius 10rem
			display block